{
  "name": "gitmoji-commit-workflow",
  "description": "ðŸŽ‰ gitmoji commit workflow",
  "private": true,
  "author": "Arvin Xu <arvinx@foxmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "lerna run build  --parallel",
    "---------": "",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "---------  ": "",
    "release": "multi-semantic-release",
    "---------    ": "",
    "lint": "npm run lint-eslint && npm run tsc",
    "tsc": "tsc -p tsconfig-check.json",
    "lint-eslint": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx packages/**/src",
    "lint-staged": "lint-staged",
    "lint-styles": "stylelint",
    "lint-staged:js": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx ",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "---------   ": "",
    "clean": "lerna run clean && rm -rf es lib dist build coverage .umi .eslintcache apis",
    "postinstall": "npm run build",
    "reinstall": "npm run clean && lerna clean --yes &&  rm -rf node_modules && npm i"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arvinxx/gitmoji-commit-workflow.git"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "yarn lint:fix"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/lint": "^17",
    "@types/jest": "^29",
    "@types/node": "^16",
    "@types/semantic-release": "^17",
    "@types/sinon": "^10.0.0",
    "@umijs/max": "^4",
    "@umijs/test": "^4",
    "babel-plugin-add-module-exports": "^1.0.4",
    "commitlint": "^11.0.0",
    "commitlint-config-gitmoji": "^2.2.5-beta.1",
    "eslint": "^8",
    "father": "^4",
    "husky": "^8",
    "jest": "^29",
    "lerna": "^4.0.0",
    "lint-staged": "^13",
    "multi-semantic-release": "^2.6.0",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.5",
    "semantic-release-config-gitmoji": "^1.2.1",
    "ts-jest": "^29",
    "ts-node": "^10",
    "typescript": "^4.1.3"
  }
}
